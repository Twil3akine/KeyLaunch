{
  "manifest_version": 3,
  "name": "Keyboard Cursor Extension",
  "version": "1.0",
  "description": "Control a virtual cursor with the keyboard",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/main.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}