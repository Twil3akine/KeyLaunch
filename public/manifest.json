{
  "manifest_version": 3,
  "name": "Keyboard Cursor Extension",
  "version": "1.0",
  "description": "Control a virtual cursor with the keyboard",
  "permissions": ["tabs", "scripting", "activeTab", "bookmarks", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/main.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/main.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "host_permissions": ["<all_urls>"],
  "commands": {
    "forward-action": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Forward like browser forward"
    },
    "toggle-bookmark-manager": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Toggle bookmark manager panel"
    }
  }
}
